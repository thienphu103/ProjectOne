<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragment_4_final_giohang">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <android.support.v7.widget.CardView
        android:layout_centerInParent="true"
        android:id="@+id/img_cardview_final_giohang"
        android:layout_width="match_parent"
        android:layout_height="285dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="20dp"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardBackgroundColor="@android:color/white"
        app:cardCornerRadius="4dp"
        app:cardElevation="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/txt_baomatdathang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:text="@string/txt_xincamon_giohang"
                android:textColor="#0288D1"
                android:textSize="34sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/line11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_baomatdathang"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="15dp"
                android:src="@drawable/line_10" />

            <RelativeLayout
                android:id="@+id/relativelayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/line11"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/img_diachi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="-35dp"
                    android:src="@drawable/group_330" />

                <ImageView
                    android:layout_marginTop="20dp"
                    android:id="@+id/gach"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="-35dp"
                    android:layout_toRightOf="@id/img_diachi"
                    android:src="@drawable/epeatrid9" />

                <ImageView
                    android:id="@+id/img_thanhtoan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="-35dp"
                    android:layout_toRightOf="@+id/gach"
                    android:src="@drawable/group10" />

                <ImageView
                    android:layout_marginTop="20dp"
                    android:id="@+id/gach_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="-35dp"
                    android:layout_toRightOf="@id/img_thanhtoan"
                    android:src="@drawable/epeatrid9" />

                <ImageView
                    android:id="@+id/img_dathang"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="-35dp"
                    android:layout_toRightOf="@+id/gach_2"
                    android:src="@drawable/group0" />

            </RelativeLayout>
            <ImageView
                android:id="@+id/line12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/relativelayout"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:src="@drawable/line_10" />
            <TextView
                android:id="@+id/txt_donhangdangduocxuli_giohang"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:textColor="#34495E"
                android:textSize="15sp"
                android:layout_below="@+id/line12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/txt_donhangcuabandangxuli_giohang"
                />
            <TextView
                android:id="@+id/txt_email_final_giohang"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_below="@+id/txt_donhangdangduocxuli_giohang"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#34495E"
                android:textSize="15sp"
                android:text="truongnhatnam@gmail.com"
                />
            <TextView
                android:id="@+id/txt_camonbandamua_giohang"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_below="@+id/txt_email_final_giohang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#34495E"
                android:textSize="15sp"
                android:text="@string/txt_camonbandamua_giohang"
                />
            <TextView
                android:layout_marginLeft="-15dp"
                android:textColor="#34495E"
                android:textSize="15sp"
                android:text="Pengin!"
                android:textStyle="bold"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/txt_email_final_giohang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/txt_camonbandamua_giohang"
                />
            <LinearLayout
                android:layout_alignParentBottom="true"
                android:weightSum="2"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:layout_weight="1"
                    android:id="@+id/btn_dangkythanhvien_giohang"
                    android:background="#0288D1"
                    android:textColor="#FFFFFF"
                    android:textSize="11sp"
                    android:layout_width="wrap_content"
                    android:textAllCaps="false"
                    android:layout_height="26dp"
                    android:text="@string/btn_dangkythanhvien_giohang"
                    android:layout_marginRight="2dp"
                    />
                <Button
                    android:layout_weight="1"
                    android:layout_toRightOf="@+id/btn_dangkythanhvien_giohang"
                    android:id="@+id/btn_trovethamquan_giohang"
                    android:background="#34495E"
                    android:textColor="#FFFFFF"
                    android:textSize="11sp"
                    android:textAllCaps="false"
                    android:layout_width="wrap_content"
                    android:layout_height="26dp"
                    android:text="@string/btn_trovethamquan_giohang"
                    />

            </LinearLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
    </RelativeLayout>
</FrameLayout>