<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dimens_CardView_width_tablayoutactivity"
    android:layout_height="@dimen/dimens_CardView_height_tablayoutactivity"
    android:orientation="vertical"
    android:background="@drawable/custom_hang_visit_tablayoutactivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <ImageView
            android:id="@+id/img_gridview_visit_hangbanchay_tablayoutactivity"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:src="@drawable/giay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/txt_title_gridview_visit_hangbanchay_tablayoutactivity"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:textSize="8sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/txt_tenhang_tablayoutactivity"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="5"
                android:layout_alignParentBottom="true"
                >
                <ImageView
                    android:adjustViewBounds="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/icon"
                    />
                <TextView
                    android:id="@+id/txt_price_gridview_visit_hangbanchay_tablayoutactivity"
                    android:textColor="@color/color_textview_text_find_tablayoutactivity"
                    android:background="@color/color_textview_background_text_find_tablayoutactivity"
                    android:layout_weight="4"
                    android:textSize="8sp"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/txt_gia_tablayoutactivity"
                    />
            </LinearLayout>
        </RelativeLayout>


    </LinearLayout>
</RelativeLayout>