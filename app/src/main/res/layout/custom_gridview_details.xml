<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="77dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#EEEEEE"
    app:cardBackgroundColor="@android:color/white"
    app:cardCornerRadius="3dp"
    app:cardElevation="5dp">
    <RelativeLayout
        android:background="#EEEEEE"
        android:layout_width="match_parent"
        android:layout_height="77dp">
        <RatingBar
            android:id="@+id/ratingbar_cardview_details"
            style="?attr/ratingBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_star_danhgia_details"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:progressDrawable="@drawable/custom_rating_bar"
            android:rating="4" />
        <TextView
            android:text="21/11/2017"
            android:alpha="0.34"
            android:textSize="10sp"
            android:id="@+id/txt_ngaydanhgia_cardview_details"
            android:layout_toRightOf="@+id/ratingbar_cardview_details"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:gravity="right"
            android:textColor="#000000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_below="@+id/txt_ngaydanhgia_cardview_details"
            android:text="Thiện Phú"
            android:alpha="0.34"
            android:textSize="10sp"
            android:id="@+id/txt_tenkhachhang_cardview_details"
            android:layout_toRightOf="@+id/ratingbar_cardview_details"
            android:layout_marginRight="10dp"
            android:gravity="right"
            android:textColor="#000000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_below="@+id/txt_tenkhachhang_cardview_details"
            android:text="Rất ngon!"
            android:textSize="13sp"
            android:id="@+id/txt_comment_cardview_details"
            android:layout_marginLeft="10dp"
            android:textColor="#000000"
            android:gravity="left"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </RelativeLayout>

</android.support.v7.widget.CardView>