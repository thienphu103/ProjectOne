<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dimens_CardView_width_tablayoutactivity"
    android:layout_marginBottom="10dp"
    android:layout_height="@dimen/dimens_CardView_height_tablayoutactivity"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    app:cardBackgroundColor="@android:color/white"
    app:cardCornerRadius="3dp"
    app:cardElevation="5dp"
    android:layout_marginLeft="12dp"
    android:layout_marginRight="12dp"
    android:background="@drawable/custom_hang_visit_tablayoutactivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <ImageView
            android:id="@+id/img_cardview_hangmoi_cuahang"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:src="@drawable/anhthunhgiem"
            android:layout_width="76dp"
            android:layout_height="76dp" />
        <TextView
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:textSize="8sp"
            android:id="@+id/title_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="GÀ SẤY GIÒN"
            />
        <TextView
            android:gravity="center"
            android:textSize="8sp"
            android:id="@+id/subtitle_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="500G"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="5"
                android:layout_alignParentBottom="true"
                >
                <ImageView
                    android:id="@+id/img_logo_hangmoi_cuahang_manage"
                    android:adjustViewBounds="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/iconthunhgiem"
                    />
                <TextView
                    android:id="@+id/txt_price_hangmoi_cuahang_manage"
                    android:textColor="@color/color_textview_text_find_tablayoutactivity"
                    android:background="@color/color_textview_background_text_find_tablayoutactivity"
                    android:layout_weight="4"
                    android:textSize="8sp"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/txt_gia_tablayoutactivity"
                    />
            </LinearLayout>
        </RelativeLayout>


    </LinearLayout>
</android.support.v7.widget.CardView>