<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dimens_CardView_width_tablayoutactivity"
    android:layout_height="@dimen/dimens_CardView_height_tablayoutactivity"
    android:layout_margin="12dp"
    android:orientation="vertical"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:background="@drawable/custom_hang_visit_tablayoutactivity"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <ImageView
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:src="@drawable/giay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:textSize="8sp"
            android:id="@+id/title_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/txt_tenhang_tablayoutactivity"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="5"
            android:layout_alignParentBottom="true"
            >
            <ImageView
                android:adjustViewBounds="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/icon"
                />
            <TextView
                android:textColor="@color/color_textview_text_find_tablayoutactivity"
                android:background="@color/color_textview_background_text_find_tablayoutactivity"
                android:layout_weight="4"
                android:textSize="8sp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/txt_gia_tablayoutactivity"
                />
        </LinearLayout>
        </RelativeLayout>


    </LinearLayout>
    </android.support.v7.widget.CardView>