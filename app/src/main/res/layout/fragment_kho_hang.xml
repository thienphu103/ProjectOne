<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_khohang_manage"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context="vn.edu.poly.project_one.View_manage.KhoHang">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/txt_khohang_manage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="25dp"
            android:text="@string/txt_khohang_manage"
            android:textColor="#000"
            android:textSize="34sp"
            android:textStyle="bold" />

        <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/cardview_timkiem_khohang"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_below="@+id/txt_khohang_manage"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            app:cardBackgroundColor="@android:color/white"
            app:cardCornerRadius="3dp"
            app:cardElevation="5dp">

            <EditText
                android:id="@+id/ext_timkiem_cuahang_khohang"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#fff"
                android:drawableLeft="@drawable/search"
                android:drawablePadding="20dp"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:hint="Bạn cần tìm gì trong kho?"
                android:inputType="text"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:textSize="13sp" />
        </android.support.v7.widget.CardView>

        <View
            android:id="@+id/view_1"
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:layout_below="@+id/cardview_timkiem_khohang"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:alpha="0.21"
            android:background="#95989A" />

        <Button

            android:id="@+id/btn_nhaphang_khohang"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_below="@+id/view_1"
            android:layout_margin="20dp"
            android:background="#1ABC9C"
            android:drawableLeft="@drawable/add"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:paddingLeft="100dp"
            android:text="Nhập hàng"
            android:textAllCaps="false"
            android:textColor="#fff"
            android:textSize="16sp"
            android:textStyle="bold" />

        <ListView
            android:id="@+id/lst_khohang"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/btn_nhaphang_khohang"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:divider="@null"
            android:dividerHeight="20dp" />
    </RelativeLayout>
</FrameLayout>
